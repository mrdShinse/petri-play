# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /login                      controllers.LoginController.index()
POST    /login                      controllers.LoginController.login()
GET     /logout                     controllers.LoginController.logout()

GET     /qanda                        controllers.QandaController.index()
GET     /qanda/create                 controllers.QandaController.create()
POST    /qanda/insert                 controllers.QandaController.insert()
GET     /qanda/:id                    controllers.QandaController.show(id:Long)
GET     /qanda/:id/update             controllers.QandaController.update(id:Long)
POST    /qanda/doUpdate               controllers.QandaController.doUpdate()
POST    /qanda/:id/delete             controllers.QandaController.delete(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
